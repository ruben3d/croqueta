{
    "compilerOptions": {
        "target": "es2015",
        "module": "es6",
        "outDir": "build",
        "noEmitOnError": true,
        "strict": true,
        "allowUnreachableCode": false,
        "noFallthroughCasesInSwitch": true,
        "noImplicitReturns": true,
        "noUnusedLocals": true,
        "removeComments": true
    },
    "include": [
        "src/**/*"
    ],
    "exclude": [
        "node_modules",
        "build"
    ]
}